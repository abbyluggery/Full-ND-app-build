// Test what JSON is actually being generated by ClaudeAPIService
// Run this in Developer Console â†’ Execute Anonymous Apex

// Create a mock request
ClaudeAPIService.ClaudeRequest request = new ClaudeAPIService.ClaudeRequest();
request.systemPrompts.add('You are a helpful assistant.');
request.messages.add(new ClaudeAPIService.Message('user', 'Hello'));

// Generate JSON
String json = request.toJson();

// Output the JSON
System.debug('=============== GENERATED JSON ===============');
System.debug(json);
System.debug('===============================================');

// Check the values
System.debug('Model: ' + request.model);
System.debug('Model Type: ' + (request.model != null ? 'Not null' : 'NULL'));
System.debug('Max Tokens: ' + request.max_tokens);
System.debug('Max Tokens Type: ' + (request.max_tokens != null ? 'Not null' : 'NULL'));
